---
const { variant = "primary", size = "medium" } = Astro.props;

const buttonStyling = "rounded-full px-5 p-1.5";

const variantClasses = {
  primary:
    "font-bold bg-farvenavn-accent text-farvenavn-primaryLight border-4 border-transparent hover:bg-farvenavn-primaryLight  hover:border-farvenavn-accent hover:text-farvenavn-accent",
  secondary:
    "font-bold bg-farvenavn-primary text-farvenavn-primaryLight border-4 border-transparent hover:bg-farvenavn-primaryLight  hover:border-farvenavn-primary hover:text-farvenavn-primary",
};
---

<button class:list={[buttonStyling, variantClasses[variant]]}><slot /></button>
